<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
		  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>xap-common-package</id>
	<formats>
		<format>dir</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<dependencySets>
		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>product/lib/required</outputDirectory>
			<includes>
				<include>org.gigaspaces:xap-common</include>
				<include>org.gigaspaces:xap-asm</include>
				<include>org.gigaspaces:xap-trove</include>
				<include>org.gigaspaces:xap-datagrid</include>
				<include>org.gigaspaces:xap-openspaces</include>
			</includes>
			<outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
		</dependencySet>

		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>product/lib/optional/sigar</outputDirectory>
			<includes>
				<include>org.hyperic:sigar</include>
			</includes>
			<outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
		</dependencySet>
	</dependencySets>

	<fileSets>
		<!-- Poms -->
		<fileSet>
			<directory>${project.basedir}/../</directory>
			<outputDirectory>${poms.dir}</outputDirectory>
			<includes>
				<include>pom.xml</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/../xap-core/xap-common</directory>
			<outputDirectory>${poms.dir}/xap-core/xap-common</outputDirectory>
			<includes>
				<include>pom.xml</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/../xap-core/xap-trove</directory>
			<outputDirectory>${poms.dir}/xap-core/xap-trove</outputDirectory>
			<includes>
				<include>pom.xml</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/../xap-core/xap-asm</directory>
			<outputDirectory>${poms.dir}/xap-core/xap-asm</outputDirectory>
			<includes>
				<include>pom.xml</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/../xap-core/xap-datagrid</directory>
			<outputDirectory>${poms.dir}/xap-core/xap-datagrid</outputDirectory>
			<includes>
				<include>pom.xml</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/../xap-core/xap-openspaces</directory>
			<outputDirectory>${poms.dir}/xap-core/xap-openspaces</outputDirectory>
			<includes>
				<include>pom.xml</include>
			</includes>
		</fileSet>
	</fileSets>
</assembly>